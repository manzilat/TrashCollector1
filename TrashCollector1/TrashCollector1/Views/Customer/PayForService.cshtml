@model TrashCollector1.Models.Customer

@{
    ViewBag.Title = "PayForService";
}

<h2>PayForService</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div>
    <dl class="dl-horizontal">
        @Html.HiddenFor(model => model.ApplicationUserId)
        <dt>
            @Html.DisplayNameFor(model => model.MoneyOwed):
        </dt>
        <dd>
            $@Html.DisplayFor(model => model.MoneyOwed).00
        </dd>
    </dl>


    @Html.ActionLink("Pay", "PayForServiceConfirmed", new { id = Model.Id }, new { @class = "btn btn-success" })
    @Html.ActionLink("Cancel", "CustomerHome", new { id = Model.Id }, new { @class = "btn btn-success" })

</div>
